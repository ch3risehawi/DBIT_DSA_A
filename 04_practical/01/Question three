def countdown(n):
    """
    Count down from n to 0 using head recursion.
    
    Parameters:
    n (int): The starting number
    
    Returns:
    None (prints the countdown)
    """
    if n < 0:
        return
    print(n)
    countdown(n - 1)

# Example usage:
countdown(5)
# Output:
# 5
# 4
# 3
# 2
# 1
# 0